<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".Fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:padding="10sp"
                    android:src="@drawable/menu_c"
                    app:tint="@color/colorPrimary" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/menu"
                    android:fontFamily="@font/m_bold"
                    android:text="TRUE LEASE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/noti"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/comment"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/colorPrimary" />


                <ImageView
                    android:id="@+id/dot"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/red_icon"
                    android:layout_margin="10dp"
                   android:visibility="gone"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAFBF9"
            android:padding="10dp">


            <RelativeLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/marker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_marker"/>

                <TextView
                    android:id="@+id/txtCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/marker"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/m_semibold"
                    android:textColor="@color/colorPrimary"

                   />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lin">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp">


                    <RelativeLayout
                        android:id="@+id/rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/ic_search"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:src="@drawable/loupee"
                            app:tint="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/ic_search"
                            android:background="@null"
                            android:focusable="false"
                            android:fontFamily="@font/m_regular"
                            android:hint="I am looking for"
                            android:paddingEnd="15dp"
                            android:textSize="12sp"
                            tools:ignore="RtlSymmetry" />
                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>




            </RelativeLayout>

        </RelativeLayout>


