        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">



            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/m_semibold"
                android:text="AWESOME ITEMS"
                android:textColor="@color/black" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/awesomeRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/m_semibold"
                android:text="EXPLORE POPULAR CATEGORY"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />


            <com.mlsdev.animatedrv.AnimatedRecyclerView
                android:id="@+id/exploreProductRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHint"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:animationDuration="600"

                app:gridLayoutManagerColumns="3"
                app:layoutAnimation="@anim/layout_animation_from_bottom_scale"
                app:layoutManagerOrientation="vertical"
                app:layoutManagerReverse="false"
                app:layoutManagerType="grid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/m_semibold"
                android:text="NEW ITEMS"
                android:textColor="@color/black" />


            <com.mlsdev.animatedrv.AnimatedRecyclerView
                android:id="@+id/ourServicesRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHint"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                app:animationDuration="600"
                app:gridLayoutManagerColumns="3"
                app:layoutAnimation="@anim/layout_animation_from_bottom_scale"
                app:layoutManagerOrientation="vertical"
                app:layoutManagerReverse="false"
                app:layoutManagerType="grid"
               />


        </LinearLayout>


    </LinearLayout>


</ScrollView>