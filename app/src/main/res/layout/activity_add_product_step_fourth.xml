<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddProductStepFourthActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/m_semibold"
                android:text="@string/add_product"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/step1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cirrcular_cyan_boundary"
                android:fontFamily="@font/m_semibold"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cirrcular_cyan_boundary"
                android:fontFamily="@font/m_semibold"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cirrcular_cyan_boundary"
                android:fontFamily="@font/m_semibold"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cyan_circular"
                android:fontFamily="@font/m_semibold"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/m_regular"
            android:text="Deliveries/Pick up"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/grey_boundary"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/m_regular"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Delivery"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/tick1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_tick"
                    android:visibility="gone"
                    app:tint="@color/colorPrimary" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />


            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/m_regular"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Pick up"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_tick"
                    android:visibility="gone"
                    app:tint="@color/colorPrimary" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                app:boxBackgroundColor="#F1EEEE">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/m_regular"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">


                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:hint="From Time"
                    app:boxBackgroundColor="#F1EEEE">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/timePick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/m_regular"
                        android:inputType="number"
                        android:focusable="false"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:hint="To Time"
                    app:boxBackgroundColor="#F1EEEE">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/datePick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/m_regular"
                        android:focusable="false"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deliveryCharges"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:hint="Delivery Charges"
                app:boxBackgroundColor="#F1EEEE">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deliveryCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/m_regular"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/m_semibold"
        android:scaleY="1.3"
        android:text="Next"
        android:textAllCaps="false" />


</RelativeLayout>