<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">



        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:visibility="gone"
                android:src="@drawable/profit_arrow"
                app:tint="#2BFD01" />


            <ImageView
                android:id="@+id/img2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:visibility="gone"
                android:src="@drawable/loss_arrow"
                app:tint="#E41E10" />



        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rel"
            android:layout_toLeftOf="@id/amount"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/payThrough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/m_medium"
                android:textSize="13sp"
                android:paddingEnd="10dp"
                android:text="Pay through paypal" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payThrough"
                android:fontFamily="@font/m_light"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
               />

        </RelativeLayout>

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/m_regular"
            android:layout_alignParentEnd="true"
           android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:text="Rs 500" />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bdbdbd"/>

</LinearLayout>