<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">



                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo2" />

                <RelativeLayout
                    android:id="@+id/relChat"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="9dp"
                    android:background="@drawable/circlr_color"
                    android:elevation="3dp"/>

                <RelativeLayout

                    android:id="@+id/chat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle"
                    android:elevation="3dp">

                    <ImageView
                        android:id="@+id/more"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/chat"
                        app:tint="@color/colorPrimary" />


                </RelativeLayout>

            </RelativeLayout>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/prName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/m_semibold"
                        android:text="prName"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/m_semibold"
                            android:text="Rented by :"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/renterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_toEndOf="@id/rb"
                            android:fontFamily="@font/m_regular"
                            android:textColor="@color/black" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/rental"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/m_semibold"
                            android:text="Rented Duration :"

                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rental"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/m_regular"
                            android:text="duration"
                            android:textColor="@color/black" />

                    </RelativeLayout>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOne"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"

                    android:fontFamily="@font/m_regular"
                    android:text="Give"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <!--

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:fontFamily="@font/m_regular"
                                    android:text="Recieve"
                                    android:textAllCaps="false" />
                -->


            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>